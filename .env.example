# Copy to .env and fill values
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
# BASE_URL should be your public URL used as redirect URI in Twitch app settings
# For local testing with ngrok set BASE_URL to the ngrok URL (https://xxxxx.ngrok.io)
BASE_URL=http://localhost:3000
PORT=3000

# YouTube OAuth (create credentials in Google Cloud Console)
YOUTUBE_CLIENT_ID=your_google_client_id
YOUTUBE_CLIENT_SECRET=your_google_client_secret
